@model IEnumerable<Category>
@{
    ViewData["Title"] = "List of Categories";
}
<style>
    th, td {
        padding: 10px;
    }
</style>

<div class="row justify-content-center">

    <div class="col-auto">
        <table class="table-bordered text-center table table-responsive">
            <thread>

                <tr>
                    <th>@Html.DisplayNameFor(model => model.Icon)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thread>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Icon" alt="" style="max-width: 150px" />
                        </td>

                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Description)</td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
